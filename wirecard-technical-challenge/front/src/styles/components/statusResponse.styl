.statusResponse
    position fixed
    width 600px
    left calc(50% - 300px)
    top 0
    height 0
    border-radius 0 0 15px 15px
    background #1E90FF
    z-index 2
    display flex
    flex-direction column
    align-items center
    overflow hidden
    transition .4s ease all

    &.-active
        transition .4s ease all
        height 300px

    > p
        color white
        font-size 28px
        text-align center
        font-weight 700

    .status
        padding 10px 5px
        background white
        margin 10px 0
        font-size 20px
        border-radius 15px
        color #0A3B5C

    .codebar
        .title
            color #0A3B5C
            margin-top 40px
        p
            color white
