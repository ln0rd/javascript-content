aside
    position relative
    width 288px
    height 100%
    background #162943
    display flex
    flex-direction column

    .logo
        width 100%
        height 100px
        display flex
        justify-content center
        margin-top 50px

        img
            max-width 200px
            height 70px

    nav
        width 100%
        margin-top 40px
        display flex
        flex-direction column

        .btn_payment, .btn_buyer, .btn_status
            padding 20px
            font-size 19px
            color white
            font-weight 700
            transition .2s ease all
            position relative
            width 100%
            margin 4px 0
            font-weight 400
            cursor pointer

            &:after
                position absolute
                content ''
                width 0
                top 0
                right 0
                height 100%
                background white
                transition .4s ease all

            &:hover
                transition .2s ease all
                font-size 19.5px

                &:after
                    transition .4s ease all
                    width 6px



